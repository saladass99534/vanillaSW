{
  "name": "sheiyuwatch",
  "productName": "SheiyuWatch",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "author": {
    "name": "SheiyuWatch Devs"
  },
  "description": "High-quality P2P screen sharing and watch party app designed for Tailscale networks.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vite build && electron-builder --publish never"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.1",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "express": "^4.19.2",
    "lucide-react": "^0.344.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-peer": "^9.11.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/simple-peer": "^9.11.5",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-static-copy": "^1.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.sheiyuwatch.app",
    "productName": "SheiyuWatch",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon1.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
